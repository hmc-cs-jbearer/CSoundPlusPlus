#! /usr/bin/env python3

import argparse
import sys

from soundwave.errors import SubprocessError
from soundwave.player import play

if __name__ == "__main__":

    parser = argparse.ArgumentParser(description="Perform a MIDI score using a SoundWave program.")
    parser.add_argument("orcFile", metavar="<orc>", help="the SoundWave orchestra file to play")
    parser.add_argument("scoreFile", metavar="<score>", help="the MIDI score to perform")
    parser.add_argument("-o", "--out", dest="outFile", default="dac",
        metavar="<file>", help="place the output into <file> in WAV format")

    args = parser.parse_args()

    try:
        for line in play(args.orcFile, args.scoreFile, args.outFile):
            print(line)
    except SubprocessError as e:
        print(e)
        sys.exit(e.code())
